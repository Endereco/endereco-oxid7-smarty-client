{
    "name": "endereco/endereco-oxid7-client-smarty",
    "type": "oxideshop-module",
    "license": "GPL-3.0-only",
    "version": "4.6.7",
    "extra": {
        "oxideshop": {
            "target-directory": "endereco/endereco-oxid7-client-smarty"
        },
        "hooks": {
            "pre-commit": [
                "composer qa"
            ]
        }
    },
    "authors": [
        {
            "name": "Ilja Weber",
            "email": "ilja@endereco.de"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^6.3|^7.3.0",
        "squizlabs/php_codesniffer": "3.7.2",
        "phpstan/phpstan": "^1.10",
        "phpmd/phpmd": "^2.10"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.7.2",
        "brainmaestro/composer-git-hooks": "^2.8",
        "phpstan/phpstan": "^1.10",
        "phpmd/phpmd": "^2.10"
    },
    "autoload": {
        "psr-4": {
            "Endereco\\Oxid7Client\\": "src"
        }
    },
    "scripts": {
        "qa": [
            "@phpcs",
            "@phpmd",
            "@phpstan",
            "@phpcompat"
        ],
        "phpcbf": "phpcbf --standard=PSR12 --ignore=vendor/*,shops/*,node_modules/* ./src/**/*.php",
        "phpcs": "phpcs --standard=PSR12 --ignore=vendor/*,shops/*,node_modules/* ./src/**/*.php",
        "phpstan": [
            "phpstan analyse -c phpstan.7.1.neon",
            "phpstan analyse -c phpstan.7.2.neon"
        ],
        "phpmd": "./check_phpmd.sh",
        "phpcompat": "bash test_php_versions.sh",
        "post-install-cmd": [
            "chmod +x test_php_versions.sh",
            "chmod +x check_phpmd.sh",
            "cghooks add --ignore-lock"
        ],
        "post-update-cmd": [
            "chmod +x test_php_versions.sh",
            "chmod +x check_phpmd.sh",
            "cghooks update"
        ]
    },
    "config": {
        "allow-plugins": {
            "ocramius/package-versions": true
        }
    }
}
